#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd, n;
    char buf[] = "Hello UNIX System Calls!\n";
    char read_buf[100] = {0};  

    fd = open("demo.txt", O_CREAT | O_RDWR | O_TRUNC, 0644);
    if (fd < 0) { perror("open"); return 1; }

    write(fd, buf, strlen(buf));
    lseek(fd, 0, SEEK_SET);

    n = read(fd, read_buf, sizeof(read_buf) - 1);
    if (n >= 0) read_buf[n] = '\0'; 
    printf("%s", read_buf);

    close(fd);
    return 0;
}
OUTPUT :
open: Permission denied
